{
  "name": "dogito-chatroom",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:build:win": "vite build && electron-builder --win",
    "electron:build:linux": "vite build && electron-builder --linux",
    "electron:build:mac": "vite build && electron-builder --mac",
    "electron:build:all": "vite build && electron-builder -mwl",
    "electron:preview": "electron-builder --dir",
    "publish": "electron-builder -p always"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.2",
    "date-fns": "^4.1.0",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.1.7",
    "firebase": "^11.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-easy-crop": "^5.4.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.4.1",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.2",
    "terser": "^5.39.0",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.dogito.chatroom",
    "productName": "Dogito Chat",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "DogitoMB2006",
        "repo": "dogito-chatroomeletrcon",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/raw.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/raw.ico",
      "uninstallerIcon": "public/raw.ico",
      "installerHeaderIcon": "public/raw.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dogito Chat",
      "runAfterFinish": true,
      "menuCategory": "Chat",
      "displayLanguageSelector": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat",
      "icon": "public/icon.png"
    }
  }
}